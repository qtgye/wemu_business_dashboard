<div class="custom-select">

	{# Native select #}
	<select name="{{ name }}" id="{{ id is not empty ? id : name }}" hidden>
		{% for value in options|keys %}
			<option value="{{ value }}" {% if value == selected %}selected{% endif %} ></option>
		{% endfor %}
	</select>

	{# Custom Select UI #}
	<button type="button" class="custom-select__toggle">
		<div class="custom-select__selected">
			{% if selected and (options[selected] is defined) %}
				{{ options[selected] }}
			{% elseif placeholder is not empty %}
				{{ placeholder }}
			{% else %}
				Please select
			{% endif %}
		</div>
		<span class="custom-select__caret">â–¼</span>
	</button>
	<div class="custom-select__dropdown">
		{% if search %}
			<input type="text" class="custom-select__search" placeholder="Search...">
		{% endif %}
		<ul class="custom-select__options">
			{% for value in options|keys %}
				<li class="custom-select__option{{ value == selected ? ' custom-select__option--selected' : '' }}" data-value="{{ value }}">{{ options[value] }}</li>
			{% endfor %}
		</ul>
	</div>
</div>